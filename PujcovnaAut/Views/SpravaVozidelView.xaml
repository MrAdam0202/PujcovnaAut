<Window x:Class="PujcovnaAut.Views.SpravaVozidelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PujcovnaAut.ViewModels"
        Title="Správa vozidel" Height="550" Width="900" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:SpravaVozidelViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#DDDDDD" BorderBrush="Black" BorderThickness="1,1,1,0">
                <TextBlock Text="Auto" FontWeight="Bold" HorizontalAlignment="Center" Padding="5"/>
            </Border>

            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <Grid.Resources>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="Gray"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="Padding" Value="5,2"/>
                        </Style>
                    </Grid.Resources>

                    <Border Grid.Row="0" Grid.Column="0" Background="#F0F0F0">
                        <TextBlock Text="Položka" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Background="#F0F0F0">
                        <TextBlock Text="Hodnota" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0">
                        <TextBlock Text="ID auta" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1">
                        <TextBlock Text="{Binding VybraneAuto.AutoId}" FontWeight="Bold" VerticalAlignment="Center"/>
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0">
                        <TextBlock Text="Značka" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1">
                        <TextBox Text="{Binding VybraneAuto.Znacka, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" BorderThickness="0"/>
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0">
                        <TextBlock Text="Model" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="3" Grid.Column="1">
                        <TextBox Text="{Binding VybraneAuto.Model, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" BorderThickness="0"/>
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0">
                        <TextBlock Text="SPZ" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="4" Grid.Column="1">
                        <TextBox Text="{Binding VybraneAuto.SPZ, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" BorderThickness="0"/>
                    </Border>

                    <Border Grid.Row="5" Grid.Column="0">
                        <TextBlock Text="Kategorie" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="5" Grid.Column="1">
                        <ComboBox ItemsSource="{Binding KategorieCol}" 
                                  SelectedItem="{Binding VybraneAuto.Kategorie}" 
                                  DisplayMemberPath="NazevKategorie"
                                  BorderThickness="0" VerticalAlignment="Center"/>
                    </Border>

                    <Border Grid.Row="6" Grid.Column="0">
                        <TextBlock Text="Denní sazba" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="6" Grid.Column="1">
                        <TextBlock Text="{Binding VybraneAuto.Kategorie.DenniSazba, StringFormat=C0}" Foreground="Gray" VerticalAlignment="Center"/>
                    </Border>

                </Grid>
            </Border>

            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="ULOŽIT ZMĚNY" Command="{Binding UlozitCommand}" Height="30" Margin="0,0,5,0" FontWeight="Bold" Background="#CCFFCC"/>
                <Button Grid.Column="1" Content="Zrušit výběr" Command="{Binding NacistData}" Height="30" Margin="5,0,0,0"/>
            </Grid>
        </Grid>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="+ Nový vůz" Command="{Binding NovyVuzCommand}" Width="100" Padding="5" Margin="0,0,5,0"/>
                <Button Content="- Smazat vybrané" Command="{Binding SmazatVuzCommand}" Width="120" Padding="5"/>
            </StackPanel>

            <DataGrid Grid.Row="1" ItemsSource="{Binding AutaCol}" SelectedItem="{Binding VybraneAuto}"
                      AutoGenerateColumns="False" IsReadOnly="True" BorderBrush="Black" BorderThickness="1" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding AutoId}" Width="30"/>
                    <DataGridTextColumn Header="Značka" Binding="{Binding Znacka}" Width="*"/>
                    <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*"/>
                    <DataGridTextColumn Header="SPZ" Binding="{Binding SPZ}" Width="80"/>
                    <DataGridTextColumn Header="Kategorie" Binding="{Binding Kategorie.NazevKategorie}" Width="Auto"/>
                    <DataGridTextColumn Header="Sazba" Binding="{Binding Kategorie.DenniSazba, StringFormat=C0}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>